@{
    ViewBag.Title = "Home Page";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row" id="RowTT">
    <h3>TIN TỨC MỚI NHẤT</h3>
    @for (int i = 0; i < @ViewBag.TinTuc_4Lastest.Count; i++)
    {
        <a href="@Url.Action("Details", "TinTucs",new { id= @ViewBag.TinTuc_4Lastest[i].IdTinTucs })">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="boxDiv">
                    <div class="warp-layout_item">


                        <p>@ViewBag.TinTuc_TenDM_4Lastest[i]</p>
                        <div class="card" style="">

                            @if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("DỊCH VỤ"))
                            {
                                <img src="@ViewBag.TinTuc_4Lastest[i].ImageDichVu" alt="" />
                            }
                            else if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("SẢN PHẨM"))
                            {
                                <img src="@ViewBag.TinTuc_4Lastest[i].ImageSanPham" alt="" />
                            }
                            else if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("VIỆC LÀM"))
                            {
                                <img src="@ViewBag.TinTuc_4Lastest[i].ImageViecLam" alt="" />
                            }
                            else if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("BÂT ĐỘNG SẢN"))
                            {
                                <img src="@ViewBag.TinTuc_4Lastest[i].ImageBatDongSan" alt="" />
                            }


                            <div class="card-body">
                                <label class="card-text">@ViewBag.TinTuc_4Lastest[i].Title</label>
                            </div>

                            <div class="form-group" style="display:inline-flex;">
                                @if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("DỊCH VỤ"))
                                {
                                    <p class="" style="margin-right:20px; margin-left:10px"><i class="fas fa-coins"></i> @ViewBag.TinTuc_4Lastest[i].PriceDichVu</p>
                                }
                                else if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("SẢN PHẨM"))
                                {
                                    <p class="" style="margin-right:20px; margin-left:10px"><i class="fas fa-coins"></i> @ViewBag.TinTuc_4Lastest[i].PriceSanPham</p>
                                }
                                else if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("VIỆC LÀM"))
                                {
                                    <p class="" style="margin-right:20px; margin-left:10px"><i class="fas fa-coins"></i> @ViewBag.TinTuc_4Lastest[i].Salary</p>
                                }
                                else if (@ViewBag.TinTuc_TenDM_4Lastest[i].Equals("BÂT ĐỘNG SẢN"))
                                {
                                    <p class="" style="margin-right:20px; margin-left:10px"><i class="fas fa-coins"></i> @ViewBag.TinTuc_4Lastest[i].PriceBatDongSan</p>
                                }

                                <p class="" style="margin-right:10px; margin-left:0px"><i class="far fa-clock"></i> @ViewBag.TinTuc_4Lastest[i].LuaChon</p>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </a>
        
    }

</div>
<div class="btn_more"></div>


