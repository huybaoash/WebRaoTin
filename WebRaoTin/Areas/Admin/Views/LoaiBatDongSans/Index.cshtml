@model IEnumerable<WebRaoTin.Models.LoaiBatDongSan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="menu">
    <ul class="menu-list">
        <li class="menu-item">
            <a href="@Url.Action("Index", "TinTucs")">Tin tức</a>
        </li>

        <li class="menu-item">
            <a href="@Url.Action("Index", "LoaiSanPhams")">Loại sản phẩm</a>
        </li>

        <li class="menu-item">
            <a href="@Url.Action("Index", "LoaiDichVus")">Loại dịch vụ</a>
        </li>

        <li class="menu-item">
            <a href="@Url.Action("Index", "LoaiViecLams")">Loại việc làm</a>
        </li>

        <li class="menu-item">
            <a href="@Url.Action("Index", "LoaiBatDongSans")">Loại bất động sản</a>
        </li>
    </ul>
</div>

<p>
    @Html.ActionLink("Thêm loại bất động sản", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |

            @if (item.Status.Equals("Công khai"))
            {
                @Html.ActionLink("Ẩn", "Hide", new { id = item.Id })
            }
            else
            {
                @Html.ActionLink("Công khai", "Show", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
