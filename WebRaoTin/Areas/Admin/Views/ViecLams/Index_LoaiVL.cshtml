
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebRaoTin.Models.ViecLam>
@{
    ViewBag.Title = "Index_LoaiVL";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="menu">
    <ul class="menu-list">
        @for (int i = 0; i < @ViewBag.SLLoaiViecLams; i++)
        {
            <li class="menu-item"><a href="@Url.Action("Index_LoaiVL", "ViecLams",new { searchString = @ViewBag.LoaiViecLams[i].Name })">@ViewBag.LoaiViecLams[i].Name</a></li>
        }

    </ul>

</div>

@using (Html.BeginForm("Index", "ViecLams", FormMethod.Get))
{
    
}

<div id="main">
    <div id="left">
        <ul>

            @foreach (var item in Model)
            {
                if (item.TinTuc.Status.Equals("Ẩn"))
                {
                    continue;
                }
                <a href="@Url.Action("Details", "TinTucs",new { id= item.TinTucId })">
                    <li id="item_li">

                        @foreach (var item2 in @ViewBag.ngaygio)
                        {
                            if (item2.IdTinTucs.Equals(item.TinTucId))
                            {
                                <img src=" @item2.ImageViecLam" alt="">

                            }
                        }
                        <h3>@Html.DisplayFor(modelItem => item.TinTuc.Title)</h3>
                        <div class="desc">
                            <span>Danh mục: @Html.DisplayFor(modelItem => item.LoaiViecLam.Name)</span>

                            @foreach (var item2 in @ViewBag.ngaygio)
                            {
                                if (item2.IdTinTucs.Equals(item.TinTucId))
                                {
                                    <span><i class="fas fa-clock"></i> @item2.LuaChon</span>
                                }
                            }


                            <span><i class="fas fa-map-marker-alt"></i> @Html.DisplayFor(modelItem => item.Location)</span>
                            <span class="gia">
                                <i class="fas fa-tag"></i>
                                @Html.DisplayFor(modelItem => item.Salary) đ
                            </span>
                        </div>
                    </li>
                </a>
            }

        </ul>
        @Html.PagedListPager(Model, page => Url.Action("Index", new
        {
            page,
            searchString = ViewBag.Keyword
        }),
        PagedListRenderOptions.PageNumbersOnly)
    </div>
    <div id="right">
        <img src="~/imagesGIF/non.gif" alt="" style="height:470px;width:100% ; margin-bottom:1px" />
        <img src="~/imagesGIF/giphy.gif" alt="" style="height:200px;width:100%" />
    </div>
</div>
