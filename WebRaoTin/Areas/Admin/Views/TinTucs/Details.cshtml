                    <hr />

                    <ul>

                        @foreach (var item in @ViewBag.dsBLcuaTT)
                        {

                            <br />

                            <b>@item.CustomerEmail</b>
                            @item.PublishDay
                            if (@ViewBag.currentUser.Id.Equals(item.CustomerID))
                            {

