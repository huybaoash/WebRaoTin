@model WebRaoTin.Models.PhieuXetUngTuyen

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>PhieuXetUngTuyen</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>

        
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <button class="btn-check" id="showCV" onclick="showOnclick()">Hiện</button>
            <button class="btn-check" id="hideCV" onclick="hideOnclick()" style="display:none;">Ẩn</button>

            <div id="CV" style="display:none;">@Html.Raw(ViewBag.WordHtml)</div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublishDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublishDay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script>
    

    function showOnclick() {
        $("#showCV").hide();
        $("#hideCV").show();
        $("#CV").show();
        
    }

    function hideOnclick() {
        $("#showCV").show();
        $("#hideCV").hide();
        $("#CV").hide();
    }

</script>