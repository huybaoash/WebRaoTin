<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style_admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    <title>@ViewBag.Title - Web Rao Tin</title>
    <link rel="icon" href="https://www.logopik.com/wp-content/uploads/edd/2018/10/Letter-R-Logo-Vector.png"
          type="image/x-icon">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        header {
            position: fixed;
            background: #22242A;
            width: 100%;
            height: 60px;
        }

        .left_area h3 {
            color: #fff;
            margin: 0;
            text-transform: uppercase;
            font-size: 22px;
            font-weight: 900;
            padding-left: 20px;
        }

        .left_area span {
            color: #1DC4E7;
        }

        .logout_btn {
            padding: 5px;
            background: #19B3D3;
            text-decoration: none;
            float: right;
            margin-top: -30px;
            margin-right: 40px;
            border-radius: 2px;
            font-size: 15px;
            font-weight: 600;
            color: #fff;
            transition-property: backgroud;
        }

            .logout_btn:hover {
                background: #0D9DBB;
            }

        .sidebar1 {
            background: #2F323A;
            margin-top: 60px;
            padding-top: 30px;
            position: fixed;
            left: 0;
            width: 250px;
            height: 100%;
            transition: 0.5s;
            transition-property: left;
        }

            .sidebar1 .profile_image {
                width: 100px;
                height: 100px;
                border-radius: 100px;
                margin-bottom: 10px;
            }

            .sidebar1 h4 {
                color: #ccc;
                margin-top: 0;
                margin-bottom: 20px;
            }

            .sidebar1 a {
                color: #fff;
                display: block;
                width: 100%;
                line-height: 60px;
                padding-left: 30px;
                font-size: 16px;
                box-sizing: border-box;
                text-decoration: none;
            }

                .sidebar1 a:hover {
                    background: #19B3D3;
                    text-decoration: none;
                }

            .sidebar1 i {
                padding-right: 10px;
            }

        label #sidebar_btn {
            z-index: 1;
            color: #fff;
            position: fixed;
            cursor: pointer;
            left: 300px;
            font-size: 20px;
            margin: 5px 0;
        }

            label #sidebar_btn:hover {
                color: #19B3D3;
            }

        #check:checked ~ .sidebar1 {
            left: -190px;
        }

            #check:checked ~ .sidebar1 a span {
                display: none;
            }

            #check:checked ~ .sidebar1 a {
                font-size: 20px;
                margin-left: 170px;
                width: 80px;
            }

        .contentAd {
            margin-left: 250px;
            background-size: cover;
            transition: 0.5s;
        }

        #check:checked ~ .contentAd {
            margin-left: 60px;
        }
  

    </style>
</head>
<body>
    <input type="checkbox" name="" value="" id="check" hidden>
    <!-- fdsfdsfds  -->
    <header>
        <label for="check">
            <i class="fas fa-exchange-alt" id="sidebar_btn"></i>
        </label>
        <div class="left_area">
            <h3>Quan<span> Tri Vien</span></h3>
        </div>
        <div class="right_area">
            <a href="@Url.Action("Index", "Home",new { area = "" })" class="logout_btn">Giao diện người dùng</a>
        </div>
    </header>
    <!-- ahhihihih -->
    <div class="sidebar1">
        <center>
            <img src="/images/admin.png" class="profile_image" alt="">
            <h4>
                @User.Identity.Name
            </h4>
        </center>


        <a href="@Url.Action("Index", "TinTucs")"><i class="fas fa-th-list"></i><span>Quản lý tin tức</span></a>
        <a href="@Url.Action("Index", "Users")"><i class="fas fa-i-cursor"></i><span>Quản lý người dùng</span></a>
        <a href="@Url.Action("Chart", "TinTucs")"><i class="fas fa-chart-bar"></i><span>Thống kê</span></a>
        
        @using (Html.BeginForm("LogOff", "Account",new { area = "" }, FormMethod.Post, new { id = "logoutForm"}))
        {
        @Html.AntiForgeryToken()

           
            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i><span>Đăng xuất</span> </a>
          
        }

    </div>
    <div class="contentAd">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @* Thêm 2 dòng script bên duouis này *@
    @RenderSection("scripts", required: false)
</body>
</html>