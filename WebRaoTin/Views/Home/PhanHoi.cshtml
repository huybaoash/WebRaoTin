<script>
    var mapcode;
    var diag;
    function initialize() {
        mapcode = new google.maps.Geocoder();
        var lnt = new google.maps.LatLng(10.8467231, 106.7238288);
        var diagChoice = {
            zoom: 21,
            center: lnt,
            diagId: google.maps.MapTypeId.ROADMAP
        }



        diag = new google.maps.Map(document.getElementById('map_populate'), diagChoice);

        var marker = new google.maps.Marker({
            position: lnt,
            zoom: 21,
            map: diag,
            title: '12 Đường số 4, Phường Hiệp Bình Phước, Quận Thủ Đức, Thành phố Hồ Chí Minh'
        });
    }
    function getmap() {
        var completeaddress = '12 Đường số 4, Phường Hiệp Bình Phước, Quận Thủ Đức, Thành phố Hồ Chí Minh';
        mapcode.geocode({ 'address': completeaddress }, function (results, status) {
            if (status == google.maps.GeocoderStatus.OK) {
                diag.setCenter(results[0].geometry.location);
                var hint = new google.maps.Marker({
                    diag: diag,
                    position: results[0].geometry.location
                });
            } else {
                alert('Location Not Tracked. ' + status);
            }
        });
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>  