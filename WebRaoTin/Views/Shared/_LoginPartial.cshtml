@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account",new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right"style="margin-top:10px;">
        <li>
            @Html.ActionLink(" "+User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" , style = "color:#2a2626;font-size:16px", @class = "fas fa-user-circle"})
        </li>
        <li><a style="color:#2a2626;font-weight:600;font-family:Arial" href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i> Đang xuất</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-top:10px;">
        <li>@Html.ActionLink(" Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" , style= "font-weight:600", @class = "fas fa-sign-out-alt" })</li> 
        <li>@Html.ActionLink(" Đăng ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", style = "font-weight:600", @class = "fas fa-user-plus" })</li> 
        
    </ul>
    
}
