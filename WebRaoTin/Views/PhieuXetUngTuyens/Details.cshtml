<script>


    function showOnclick() {
        $("#showCV").hide();
        $("#hideCV").show();
        $("#CV").show();

    }

    function hideOnclick() {
        $("#showCV").show();
        $("#hideCV").hide();
        $("#CV").hide();
    }

</script>